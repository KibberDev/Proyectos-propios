<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.MainController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Gestor de Finanzas Personales"
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Label fx:id="labelSaldo" text="Saldo actual: 0.00 €"
           style="-fx-font-size: 18px; -fx-text-fill: green;"/>

    <Button fx:id="buttonAñadir" text="Añadir Ingreso"
            onAction="#abrirFormularioMovimiento"
            style="-fx-font-size: 18px;-fx-text-fill: green;"/>

</VBox>